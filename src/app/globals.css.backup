@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
  min-height: 100vh;
  background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8)),
    url('https://images.unsplash.com/photo-1588666309990-d68f08e3d4c6?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
  background-size: cover;
  color: #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  position: relative;
  overflow-x: hidden;
}

body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(74, 99, 231, 0.1), rgba(0, 0, 0, 0.5));
  z-index: -1;
}

.container {
  width: 100%;
  max-width: 1100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

/* Language Switcher */
.language-switcher {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 1000;
  display: flex;
  gap: 10px;
}

.lang-btn {
  padding: 10px 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 25px;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
  backdrop-filter: blur(10px);
}

.lang-btn:hover {
  background: rgba(74, 99, 231, 0.3);
  border-color: #4a63e7;
}

.lang-btn.active {
  background: linear-gradient(135deg, #4a63e7, #6b46c1);
  border-color: #4a63e7;
}

/* Screens */
.screen {
  text-align: center;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(15px);
  padding: 50px;
  border-radius: 25px;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.25);
  animation: fadeIn 0.8s ease-out;
  display: none;
  width: 100%;
  max-width: 700px;
}

.screen.active {
  display: block;
}

#searchScreen.active {
  display: block;
  max-width: 1100px;
}

.screen h1 {
  font-size: 2.5rem;
  margin-bottom: 20px;
  color: #fff;
  text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
}

.screen h1 .highlight {
  color: #a5b4fc;
}

.screen h2 {
  font-size: 2rem;
  margin-bottom: 15px;
  color: #fff;
}

.screen p {
  font-size: 1.1rem;
  margin-bottom: 20px;
  line-height: 1.7;
  color: #e0e0e0;
}

/* Lombok Info */
.lombok-info {
  background: linear-gradient(135deg, rgba(74, 99, 231, 0.2), rgba(56, 73, 189, 0.15));
  padding: 25px;
  border-radius: 15px;
  margin: 25px 0;
  border: 1px solid rgba(255, 255, 255, 0.15);
}

.lombok-info h3 {
  color: #fff;
  margin-bottom: 15px;
  font-size: 1.4rem;
}

.lombok-info ul {
  list-style: none;
  text-align: left;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.lombok-info li {
  margin: 8px 0;
  padding: 10px 15px 10px 35px;
  position: relative;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
  border-left: 3px solid #4a63e7;
}

